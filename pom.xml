                <!--<groupId>com.github.tomakehurst</groupId>-->
                <!--<artifactId>wiremock-standalone</artifactId>-->
                <!--<version>2.6.0</version>-->
                <!--<scope>test</scope>-->
            <!--</dependency>-->
        </dependencies>
    </dependencyManagement>

</project>
